{
  "settings": {
    "index.mapping.ignore_malformed": true
  },
  "mappings": {
    "incident": {
      "dynamic_templates": [
        {
          "strings": {
            "match_mapping_type": "string",
            "mapping": {
              "type": "string",
              "index": "not_analyzed"
            }
          }
        }
      ],
      "properties": {
        "datetime": {
          "type": "date",
          "format": "dateOptionalTime"
        },
        "location": {
          "type": "geo_point",
          "lat_lon": true,
          "geohash": true
        }
      }
    }
  }
}
